<%- include('Head') %> <%- include('Navigation') %> <%- include('Header') %>

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div
            class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
        >
        <% for (let iCount = 0; iCount < reviewData.length; iCount++){%>
            <div class="col mb-5">
                <a style="text-decoration: none; color: black;" href="product/<%=reviewData[iCount].product_id%>"></a>
                    <div class="card h-100 box" id="myBox">
                        <!-- Product image-->
                        <img
                            class="card-img-top"
                            src="<%=reviewData[iCount].img_path%>"
                            alt="..."
                        />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder"><%=reviewData[iCount].product_name%></h5>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        <%}%>
                    <!-- Product actions-->
                    <div
                        class="card-footer p-4 pt-0 border-top-0 bg-transparent"
                    >
                        <div class="text-center"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('Footer') %>