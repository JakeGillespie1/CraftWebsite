<%- include('Head') %> <%- include('Navigation') %> <%- include('Header') %>
<!-- Section-->
<body class="bg-gradient-primary">
    <div style="margin: 100px" class="container-custom">
        <div class="left-column-custom" style="padding-right: 50px">
            <img
                src="<%= productData[0].img_path %>"
                class="active"
                style="border-radius: 10px"
                alt="product"
            />
        </div>
        <div class="right-column-custom" style="padding-top: 0px">
            <div class="product-description">
                <h3>Hand-made</h3>
                <h1><%= productData[0].product_name %></h1>
                <p><%= productData[0].product_desc %></p>
            </div>
            <div class="product-price">
                <span style="font-size: 75px"
                    >$<%= productData[0].product_price %>.00</span
                >
                <br /><br />
                <a href="leaveReview/<%=productData[0].product_id%>">
                    <button class="button" type="button">Leave a Review</button>
                </a>
            </div>
        </div>
    </div>
    <div class="container-custom">
        <p><%= prodReviewsAvg %></p>
        <% for (let iCount = 0; iCount < productReviews.length; iCount++){%>
        <div class="col mb-5">
            <p><%= productReviews[iCount].reviewer_name %></p>
            <p><%= productReviews[iCount].review_text %></p>
        </div>
        <%}%>
    </div>
</body>
<%- include('Footer') %>
